@model IEnumerable<EmployeeViewModel>
@{
	ViewData["Title"] = "Index";
}

<h1 class="text-primary">All Employee</h1>

<br />
<br />
<br />
<br />

<a asp-controller="Employee" asp-action="create" class="btn btn-primary">Create new Employee</a>

<br />
<br />


@if (Model.Count() > 0)
{

	<dev class="row   justify-content-center align-items-center  ">
		<form asp-action="index" class=" row col-8 offset-2">

			<dev class=" row col-8">
				<input / type="text" name="inputData" placeholder="Search By Name" class="form form-control">

			</dev>
			<dev class="col-4 ">

				<input / type="submit" value="searech" class="btn btn-success">
			</dev>
		</form>
	</dev>
<br />
<br />
	<table class="table table-striped table-hover">
		<thead >
			<tr>
			@* 	<th>Image</th> *@
				<th>@Html.DisplayNameFor(e => e.Name)</th>
				<th>@Html.DisplayNameFor(e => e.Age)</th>

				<th>@Html.DisplayNameFor(e => e.Salary)</th>
				<th>@Html.DisplayNameFor(e => e.Department)</th>

				<th>@Html.DisplayNameFor(e => e.IsActive)</th>

				<th>@Html.DisplayNameFor(e => e.Gender)</th>
				<th>@Html.DisplayNameFor(e => e.Email)</th>
				


		


			
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>


			</tr>

		</thead>

		<tbody>
			@foreach (var item in Model)
			{

				<tr>
		@* 			<th>
						<img src="~/Files/Images/@item.ImageName" width="40" class="rounded-circle" />
					</th> *@
					<th>@item.Name</th>
					<th>@item.Age</th>
					<th>@Html.DisplayFor(m => item.Salary)</th>
					<th>@Html.DisplayFor(m => item.Department.Name)</th>

					<th>@Html.DisplayFor(m => item.IsActive)</th>
					<th>@item.Gender</th>
					<th>@Html.DisplayFor(m => item.Email)</th>
					
					
					
					@* <th>@item.PhoneNumber</th> *@
				
					@* <th>@item.EmpType</th> *@
					@* <th>@item.HiringDate.Year</th> *@
					<partial name="_Buttonspartial" model="@item.id"></partial>
				</tr>
			}
		</tbody>	
	</table>
}
else
{
	<dev class="mt-5 w-75 text-info">

	<h3>There is No Employee :(</h3>
	<br />
		<a class="btn btn-outline-info" asp-action="index" asp-controller="employee"> Back To List</a>


</dev>
}