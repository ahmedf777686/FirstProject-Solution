@model IEnumerable<Employee>
@{
	ViewData["Title"] = "Index";
}

<h1 class="text-primary">All Employee</h1>

<br />
<br />
<br />
<br />

<a asp-controller="Employee" asp-action="create" class="btn btn-primary">Create new Employee</a>

<br />
<br />


@if (Model.Count() > 0)
{
	<table class="table table-striped table-hover">
		<thead >
			<tr>
				<th>@Html.DisplayNameFor(e => e.Name)</th>
				<th>@Html.DisplayNameFor(e => e.Age)</th>

				<th>@Html.DisplayNameFor(e => e.Salary)</th>
				<th>@Html.DisplayNameFor(e => e.IsActive)</th>

				<th>@Html.DisplayNameFor(e => e.Gender)</th>
				<th>@Html.DisplayNameFor(e => e.Email)</th>
				


		


			
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>


			</tr>

		</thead>

		<tbody>
			@foreach (var item in Model)
			{

				<tr>
					<th>@item.Name</th>
					<th>@item.Age</th>
					<th>@Html.DisplayFor(m => item.Salary)</th>
					<th>@Html.DisplayFor(m => item.IsActive)</th>
					<th>@item.Gender</th>
					<th>@Html.DisplayFor(m => item.Email)</th>
					
					
					
					@* <th>@item.PhoneNumber</th> *@
					
					@* <th>@item.EmpType</th> *@
					@* <th>@item.HiringDate.Year</th> *@
					<td>
						<a asp-route-id="@item.id" asp-action="Details" asp-controller="Employee" class="btn btn-warning"> <i class="fas fa-eye"></i> Details</a>
					</td>
					<td>
						<a asp-route-id="@item.id" asp-action="Edit" asp-controller="Employee" class="btn alert-danger"><i class="fas fa-edit"></i> Update</a>
					</td>
					<td>
						<a asp-route-id="@item.id" asp-action="Delete" asp-controller="Employee" class="btn btn-primary"> <i class="fas fa-trash"></i> Delete</a>
					</td>
				</tr>
			}
		</tbody>	
	</table>
}
else
{
	<dev class="mt-5 w-75 text-info">

	<h3>There is No Employee :(</h3>

</dev>
}